<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">


    <LinearLayout
        android:id="@+id/lnrLayout1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getStock_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/compLbl"
            android:layout_width="@dimen/lblWidth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lblMargLeft"
            android:layout_weight="1"
            android:text="Company: "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/compName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrLayout2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnrLayout1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="3sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/exchLbl"
            android:layout_width="@dimen/lblWidth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lblMargLeft"
            android:layout_weight="1"
            android:text="Symbol:"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/symbolName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margLft"
            android:layout_weight="1"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrLayout3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/lnrLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/closingPriceLbl"
            android:layout_width="@dimen/lblWidth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lblMargLeft"
            android:layout_weight="1"
            android:text="Last Trade Price: "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/lastTradePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margLft"
            android:layout_weight="1"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrLayout4"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnrLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chgLbl"
            android:layout_width="@dimen/lblWidth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lblMargLeft"
            android:layout_weight="1"
            android:text="Price Change: "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/changePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margLft"
            android:layout_weight="1"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnrLayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/percentLbl"
            android:layout_width="@dimen/lblWidth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/lblMargLeft"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Percent Change: "
            android:textSize="10sp" />

        <TextView
            android:id="@+id/percent_changeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margLft"
            android:layout_weight="1"
            android:textSize="10sp" />
    </LinearLayout>


</LinearLayout>